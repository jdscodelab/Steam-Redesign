<UserControl x:Class="SteamRedesign.CC.tags"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteamRedesign.CC"
             mc:Ignorable="d"
             x:Name="this">
    <DockPanel>
        <Border
            Background="{StaticResource TertiaryBrush}"
            Height="30"
            CornerRadius="5">
            <TextBlock
                Padding="5,0"
                Foreground="{StaticResource SecondaryBrush}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding Text, ElementName=this, FallbackValue=Tag Name, TargetNullValue=Tag Name}"/>
        </Border>
    </DockPanel>
</UserControl>
